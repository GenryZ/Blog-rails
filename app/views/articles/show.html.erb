<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
<hr />
	<p>
		<strong><i><%= comment.author %> : </i></strong>
		
		<%= comment.created_at %>
	</p>
	<p>
		<!-- <strong>Comment:</strong> -->
		<%= comment.body %>
	</p>

	<p>
  <%= link_to 'Delete', [comment.article, comment],
               method: :delete,
               data: { confirm: "Are you sure?" } %>
</p>

<% end %>
<hr/>
<a href="/articles">Back to articles</a>
<h2>Add comments</h2>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</p>


 